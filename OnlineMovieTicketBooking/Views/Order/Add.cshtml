@model CreateOrderModel
@{
    ViewData["Title"] = "Sipariş Ekle - ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main" >
    <div class="row" >
        <div class="col-4 offset-4">
             <h2 class="display-4 border-bottom text-center pb-2"><br />Sipariş Ekle<br /></h2>
        </div>
    </div> 
    <section class="section" >
      <div class="row">
        <div class="col">

          <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sipariş Ekle</h5>
              <!-- Vertical Form -->
              <form class="row g-3" method="post" style="margin-left:500px;width:500px;margin-top:10px">
                <div class="col-12 ">
                  <label asp-for="UyeID" class="form-label">UyeID</label>
                  <input asp-for="UyeID" type="text" class="form-control" id="inputNanme4" />
                   <span asp-validation-for="UyeID" class="text-danger small"></span>
                </div>
                <div class="col-12">
                  <label asp-for="SeansID" class="form-label">SeansID</label>
                  <input asp-for="SeansID" type="text" class="form-control" id="inputNanme4" />
                   <span asp-validation-for="SeansID" class="text-danger small"></span>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
              </form><!-- Vertical Form -->
            </div>
          </div>
        </div>
      </div>
    </section>

  </main><!-- End #main -->

