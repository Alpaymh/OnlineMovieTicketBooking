@model List<TheaterModel>
@{
    ViewData["Title"] = "Sinema Salonları - ";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row" >
    <div class="col-4 offset-4">
        <h2 class="display-4 border-bottom text-center pb-2" style="margin-left:22px"><br />Sinema Salonları<br /></h2><hr/>
    </div>
</div>

<section id="events">
 <div class="container">
  <div class="row">
    <div class="events_main clearfix">
		@foreach (var salon in Model)
				{
						<div class="tab-content clearfix">
						  <div id="home" class="tab-pane fade in active clearfix">
							 <div class="click clearfix">
							   <div class="col-sm-8 space_left">
								<div class="click_left clearfix">
								 <div class="col-sm-5 space_left">
								  <div class="click_left_inner clearfix">
									<img src="~/uploads/@salon.Resim" width="100%" height="280px">
								  </div>
								 </div>
								 <div class="col-sm-7">
								  <div class="click_left_inner_1 clearfix">
									 <h2> @salon.SalonAdi </h2>
									 <p class="para_1">@salon.Adres</p>
								  </div>
								 </div>
								</div>
							   </div>
							   <div class="col-sm-4">
								<div class="click_right clearfix">
								 <h4>Detaylar</h4>
								 <ul>
								  <li><i class="fa fa-phone"></i>@salon.Telefon</li>
								 </ul>
								</div>
							   </div>
							  </div>
						  </div>
						</div>
				}
   </div>   
  </div>
 </div>
</section>

