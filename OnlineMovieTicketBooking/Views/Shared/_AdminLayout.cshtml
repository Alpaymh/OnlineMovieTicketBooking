
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Admin Paneli - Online Sinema Bilet Satışı</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="~/favicon.ico" rel="icon" asp-append-version="true">
  <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" asp-append-version="true">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect" asp-append-version="true">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" asp-append-version="true">

  <!-- Vendor CSS Files -->
  <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet" asp-append-version="true">
  <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet" asp-append-version="true">

  <!-- Template Main CSS File -->
  <link href="~/assets/css/style.css" rel="stylesheet" asp-append-version="true">

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a asp-area="" asp-controller="Admin" asp-action="Index" class="logo d-flex align-items-center">
        <img src="~/favicon.ico" alt="">
        <span class="d-none d-lg-block">Alpago</span>
      </a>
    </div><!-- End Logo -->

    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">

        <li class="nav-item d-block d-lg-none">
          <a class="nav-link nav-icon search-bar-toggle " href="#">
            <i class="bi bi-search"></i>
          </a>
        </li><!-- End Search Icon-->

        <li class="nav-item dropdown pe-3">
            
          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <span class="d-none d-md-block dropdown-toggle ps-2">@User.FindFirst("UserName").Value</span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
                <h6>@User.FindFirst("UserName").Value</h6>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-box-arrow-right"></i>
                <span>Admin Panelinden Çıkış</span>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

      <li class="nav-item">
        <a class="nav-link " asp-area="" asp-controller="Admin" asp-action="Index">
          <i class="bi bi-grid"></i>
          <span>Anasayfa</span>
        </a>
      </li><!-- End Dashboard Nav -->
      <li class="nav-item">
        <a class="nav-link collapsed" asp-area="" asp-controller="User" asp-action="Index">
          <i class="bi bi-person"></i><span>Uyeler</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" asp-area="" asp-controller="Movie" asp-action="Index">
          <i class="bi bi-film"></i><span>Filmler</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" asp-area="" asp-controller="Cinema" asp-action="Index">
          <i class="bi bi-shop"></i><span>Sinema Salonları</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" asp-area="" asp-controller="Session" asp-action="Index">
          <i class="bi bi-clipboard"></i><span>Seanslar</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" asp-area="" asp-controller="Order" asp-action="Index">
          <i class="bi bi-credit-card"></i><span>Ödemeler</span>
        </a>
      </li>
    </ul>

  </aside><!-- End Sidebar-->

  @RenderBody()

   <!-- ======= Footer ======= -->
  <footer id="footer" class="footer" style="margin-top:250px">
    <div class="copyright">
      &copy; Copyright <strong><span>Alpago</span></strong>. 2023 Tüm Hakları Saklıdır.
    </div>
    <div class="credits">
      <a href="#">Alpay</a> Tarafından Tasarlandı.
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="~/assets/vendor/apexcharts/apexcharts.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/chart.js/chart.umd.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/echarts/echarts.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/quill/quill.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/simple-datatables/simple-datatables.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/tinymce/tinymce.min.js" asp-append-version="true"></script>
  <script src="~/assets/vendor/php-email-form/validate.js" asp-append-version="true"></script>

  <!-- Template Main JS File -->
  <script src="~/assets/js/main.js"  asp-append-version="true"></script>

</body>

</html>

