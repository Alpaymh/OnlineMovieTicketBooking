<body>

<section id="top" style="background:white">
 <div class="container" >
  <div class="row">
   <div class="top_main clearfix">
	 @*</div>*@
	 <div class="top_2 clearfix">
	  <div class="col-sm-3">
	   <div class="top_2_left">
	    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" height="60px"></a>
	   </div>
	  </div>
	  <div class="col-sm-9">
	   <div class="top_2_right text-right">
	     <ul>
			 @if (User.Identity.IsAuthenticated)
			 {
				 if (User.IsInRole("admin"))
				 {
					<li><a style="color:black;font-size:small" asp-area="" asp-controller="Admin" asp-action="Index">  
						@*<i class="fa-solid fa-user me-2"></i>*@ Admin Paneli
					</a></li>
				 }
				<li><a style="color:black;font-size:small" asp-area="" asp-controller="Account" asp-action="Profile">  
					@*<i class="fa-solid fa-user me-2"></i>*@ Profil [ @User.FindFirst("UserName").Value ]
				</a></li>
			    <li class="border_none_1"><a asp-area="" asp-controller="Account" asp-action="Lagout" style="color:black;font-size:small">
					<i class="fa-solid fa-rigth-from-bracket me-2"></i> Çıkış Yap
				</a></li>
			 }
			 else
			 {
				<li><a style="color:black;font-size:small" asp-area="" asp-controller="Account" asp-action="Login">
					<i class="fa-solid fa-rigth-to-bracket me-2"></i> Giriş Yap 
				</a></li>
			    <li class="border_none_1"><a asp-area="" asp-controller="Account" asp-action="Register" style="color:black;font-size:small">
					<i class="fa-solid fa-user me-2"></i> Kayıt Ol
				</a></li>							
